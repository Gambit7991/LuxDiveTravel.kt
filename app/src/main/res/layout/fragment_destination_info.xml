<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".destinationInfoPage.DestinationInfo">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/destination_content_fragment_container"
        android:name="com.example.luxdivetravel.destinationInfoPage.ContentDestinationInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_chose_your_boat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.63"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_chose_your_boat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="175dp"
        android:background="@drawable/destination_button"
        android:text="@string/chose_your_boat"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="bottom"
        app:layout_constraintBottom_toTopOf="@+id/destination_bottom_menu_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destination_content_fragment_container"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_destination_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/destination_bottom_menu_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.26"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_chose_your_boat"
        app:layout_constraintWidth_percent="1">

    </androidx.viewpager2.widget.ViewPager2>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/destination_bottom_menu_container"
        android:name="com.example.luxdivetravel.BottomNavigationMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1" />

</androidx.constraintlayout.widget.ConstraintLayout>